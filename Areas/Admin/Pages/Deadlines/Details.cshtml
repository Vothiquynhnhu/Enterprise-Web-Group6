@page "/xem-thoi-han/{id:int}/"
@model Album.Areas.Admin.Pages.Deadlines.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Article</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Deadline.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Deadline.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Deadline.dl_TimeDeadline)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Deadline.dl_TimeDeadline)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Deadline.dl_Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Deadline.dl_Description)
        </dd>
    </dl>
</div>
<hr />
<div>
    <h3>Phần nộp bài</h3>
</div>
<div>
    <form method="post" enctype="multipart/form-data">
        @*<label asp-for="@Model.FileUploads"></label>*@
        <input asp-for="@Model.FileUploads" />
        <br />
        @*<span asp-validation-formaction="@Model.FileUploads"></span>*@

        @{ 
            foreach (var item in Model.userFilesList)
            {
                <div>
                    <img src="https://cms.greenwich.edu.vn/theme/image.php/adaptable/core/1596790129/f/pdf" alt="pdf" />
                    <a href="#">@item.Title</a>
                </div>
            }
        }
        <button class="btn btn-danger"  asp-page="Details" >Upload</button>
    </form>
</div>
<hr />
<div>
    <h3>Phần comment</h3>
    <div>
        <form method="post">
            @{
                foreach (var item in Model.userCommentList)
                {
                    <label>User</label>
                    <input type="text" value=@item.comment_Content  readonly/>
                    <br />
                }
            }

            <label>User</label>
            <input type="text" asp-for="cmtContext" />
            <button class="btn btn-danger" asp-page="Details">Comment</button>
        </form>
        
    </div>
</div>
<div>
    @*<a asp-page="./Edit" asp-route-id="@Model.Deadline.dl_Id">Edit</a>*@
    <a asp-page="./Index">Back to List</a>
</div>
